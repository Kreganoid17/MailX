

@model Mail_X.Models.FormDetails

<body>

    <link rel="stylesheet" href="/css/Theme.css">

<div class = "float-start">

        <label>Software Release to Live</label>

    </div>

    
    <div class = "d-flex align-items-end justify-content-end mt-2">

    <img src="~/img/Bet_Logo.jpg" class = "img-fluid" style = "width:170px; height:75px;">

    </div>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
@using(@Html.BeginForm("AddForm","Form", new{FD = Model}))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new{@class = "text-danger"})

    <div class = " mt-5 col">

        <div>

            <label>Project Name:</label>
            @Html.TextBoxFor(Model => Model.AppName, new {@class = "w-25", @style = "margin-left:105px;"})
            @Html.ValidationMessageFor(Model => Model.AppName, "", new {@class = "text-danger"})

        </div>

        <br>

        <div>

            <label>Deploy Start Date:</label>
            @Html.TextBoxFor(Model => Model.StartDate, new {@type = "datetime-local", @class = "w-25", style = "margin-left:77px;"})
            @Html.ValidationMessageFor(Model => Model.StartDate, "", new {@class = "text-danger"})

        </div>

        <br>

        <div>

            <label>Deploy End Date:</label>
            @Html.TextBoxFor(Model => Model.EndDate, new {@type = "datetime-local", @class = "w-25", style = "margin-left:83px;"})
            @Html.ValidationMessageFor(Model => Model.EndDate, "", new {@class = "text-danger"})

        </div>

        <br>

        <div>

            <label>Application Name:</label>
            @Html.TextBoxFor(Model => Model.AppName, new {@class = "w-25", @style = "margin-left:75px;"})
            @Html.ValidationMessageFor(Model => Model.AppName, "", new {@class = "text-danger"})

        </div>

        <div class = "pt-4">

            <label>Deploy Environment:</label>
            <select id = "filter type" style = "height:30px; border-radius:3px; margin-left:58px;" class = "w-25">
             <option>UAT</option>
             <option>Pre-Live</option>
             <option>Live</option>
            </select>
            

        </div>

        <br>

        <div>

            <label>Server Name/IP Address:</label>
            @Html.TextBoxFor(Model => Model.ServerName, new {@class = "w-25", @style = "margin-left:30px;"})
            @Html.ValidationMessageFor(Model => Model.ServerName, "", new {@class = "text-danger"})

        </div>

        <br></br>

        <table class="text-center w-100" id = "myTable">
            <thead>
                <tr style = "text-align:center;">
                    <th>Check If Completed</th>
                    <th>Item Requested And Tested</th>
                </tr>
            </thead>
            <tbody >
          
                <tr style = "text-align:center;">
                    <td><input type = "checkbox"/></td>
                    <td>Test 1</td>
                </tr>

                <tr style = "text-align:center;">
                    <td><input type = "checkbox"/></td>
                    <td>Test 2</td>
                </tr>
      
            </tbody>
        </table>

  <br>

        <div>

            <label>Pull Request:</label> 


        </div>

        <div>

           @Html.TextAreaFor(Model => Model.PullRequests, new{@class = "w-100", rows = "5", col = "80"})
           @Html.ValidationMessageFor(Model => Model.PullRequests, "", new {@class = "text-danger"})


        </div>

        <div class = "pt-3">

            <label>Additional Notes:</label>
            

        </div>


    </div>

     <div class = "pt-1">

           @Html.TextAreaFor(Model => Model.AdditionalNotes, new{@class = "w-100", rows = "7", col = "80"})
           @Html.ValidationMessageFor(Model => Model.AdditionalNotes, "", new {@class = "text-danger"})

     </div>

     <div class = "pt-3">

            <label>Approvals:</label>

     </div>

     <div class = "pt-1">

            @Html.TextAreaFor(Model => Model.SignOff, new{@class = "w-100", rows = "2", col = "50"})
            @Html.ValidationMessageFor(Model => Model.SignOff, "", new {@class = "text-danger"})

     </div>

     

     <button class = "btn btn-primary">Create Form</button>
    
}    

</body>

@Html.ValidationSummary(true)

@if(ViewBag.Message != null){
                
                <script>

                    alert("@ViewBag.Message");

                </script>

            } 
