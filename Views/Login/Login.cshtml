@model Mail_X.Models.Login

<link rel="stylesheet" href="/css/Theme.css">


<div class = "col text-center p-2">

            <img src="~/img/MAIL_X_LOGO.png" class = "img-fluid" style = "width:200px; height:120px; position:absolute; margin-left:-85px;">

</div>

<br></br>
<br></br>



<div class = "d-flex align-items-center justify-content-center mt-5">

    <div class="card text-center mt-2 h-50" style = "background-color : #ffffff; width:500px;">
        <div class="card-body">
             <h5 class="card-title p-2">Welcome</h5>
             <p class="card-text mb-3">Please log in to your account</p>

             @using (@Html.BeginForm("Validate","Login",Model)){

                 @Html.AntiForgeryToken()

                 @Html.ValidationSummary(true, "", new{@class = "text-danger"})

                <p>
                   @Html.TextBoxFor(Model => Model.EmpID, new{ @class = "form-control", @placeholder = "Employee ID"})
                   @Html.ValidationMessageFor(Model => Model.EmpID, "", new {@class = "text-danger"})
                </p>
                
    
                <p class = "my-2">
                    @Html.TextBoxFor(Model => Model.Password, new{ @class = "form-control my-2", @placeholder = "Password", @type = "Password"})
                    @Html.ValidationMessageFor(Model => Model.Password, "", new {@class = "text-danger"})
                </p>


                <button class="btn btn-primary mt-3" style = "background-color: #73a9ff; border-color:#73a9ff;">Login</button>
                <br>

                <div class = "pt-4 pr-4 pb-2 pl-2 float-start">

                    <input type = "checkbox" style = "width:12px; height:12px;"> Remember Me

                </div>

                
                
                    <div class = "pt-4 pr-2 pb-2 pl-4 float-end">

                        <a href = "#" data-bs-toggle = "modal" data-bs-target="#ForgotModal">Forgot Password?</a>

                    </div>

                

                  
             
             }

             <div class = "modal fade" id="ForgotModal" tabindex="-1" aria-labelledby="ForgotModalLabel" aria-hidden="true">
            <div class = "modal-dialog">
                <div class = "modal-content">
                    <div class = "modal-header">
                        <h5 class = "modal-title" id = "confirmModalLabel">Forgot Password</h5>
                        <button type = "button" class = "btn-close" data-bs-dismiss = "modal"></button>
                    </div>
                    <div class = "modal-body" id = "modal_body">
                        <input type = "email" placeholder = "Enter Email" class = "w-100" id = "Email">
                    </div>
                    <div class = "modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss = "modal">Cancel</button>
                        <button type="button" class="btn btn-primary"   data-bs-dismiss = "modal" onclick = "#">Submit</button>
                    </div>
                </div>
            </div>
       </div>


             @Html.ValidationSummary(true)

            @if(ViewBag.Message != null){
                
                <script>

                    alert("@ViewBag.Message");

                </script>

            } 

             
             <br>
             


        </div>
    </div>

</div>

<script>

</script>




