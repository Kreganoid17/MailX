@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@model Mail_X.Models.SignOff

<h1>Sign Off</h1>

@using(@Html.BeginForm("AddSignOff", "Form", new { ID = ViewContext.RouteData.Values["ID"] , Model, Home = @HttpContextAccessor.HttpContext.Session.GetString("Home")})){

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new{@class = "text-danger"})

<div class = "container">

            <div class = "row">

            <div>
            
                <label>Select Department:</label>
                @Html.TextBoxFor(Model => Model.DeptName, new{ @class = "form-control"})
                @Html.ValidationMessageFor(Model => Model.DeptName, "", new {@class = "text-danger"})
                
            
            </div>

            <div class = "col-6">

                <label>Name</label>
                @Html.TextBoxFor(Model => Model.SignName, new{ @class = "form-control"})
                @Html.ValidationMessageFor(Model => Model.SignName, "", new {@class = "text-danger"})

            </div>

            <div class = "col-6">

                <label>Signature</label>
                @Html.TextBoxFor(Model => Model.Signature, new{ @class = "form-control"})
                @Html.ValidationMessageFor(Model => Model.Signature, "", new {@class = "text-danger"})

            </div>
            
    </div>

    <div class = "pt-3">

            <label>Comments:</label>

     </div>

     <div class = "pt-1">

            @Html.TextAreaFor(Model => Model.Comments, new{@class = "w-100", rows = "3", col = "50"})
            @Html.ValidationMessageFor(Model => Model.Comments, "", new {@class = "text-danger"})

     </div>

</div>

<button type = "submit" class = "btn-primary">Submit</button>

}

@Html.ValidationSummary(true)

@if(ViewBag.Message != null){
                
                <script>

                    alert("@ViewBag.Message");

                </script>

            } 