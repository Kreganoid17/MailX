@model Mail_X.Models.FormDetails



    <div class = "float-start">

        <label>Software Release to Live</label>

    </div>

    
    <div class = "d-flex align-items-end justify-content-end mt-2">

    <img src="~/img/Bet_Logo.jpg" class = "img-fluid" style = "width:170px; height:75px;">

    </div>

@using (@Html.BeginForm("UpdateForm", "Form", new { Model, @ViewBag.ID}))
{

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new{@class = "text-danger"})
    
    <div class = "float-start mt-5">

        <div class = "float-start">

            <label>Test Date From:</label>
            @Html.TextBoxFor(Model => Model.StartDate, new { @type = "datetime-local" ,@style = "margin-left:100px"})
            @Html.ValidationMessageFor(Model => Model.StartDate, "", new {@class = "text-danger",@style = "margin-left:100px"})

        </div>

        <div class = "float-end mx-5" >

            <label style = "margin-left:150px;">Test Date To:</label>
            @Html.TextBoxFor(Model => Model.EndDate, new {@type = "datetime-local" ,@style = "margin-left:100px"})
            @Html.ValidationMessageFor(Model => Model.EndDate, "", new {@class = "text-danger",@style = "margin-left:100px"})

        </div>

        <br></br>

        <div>

            <label>Application Name:</label>
            @Html.TextBoxFor(Model => Model.AppName, new {@class = "w-50", @style = "margin-left:80px;"})
            @Html.ValidationMessageFor(Model => Model.AppName, "", new {@class = "text-danger", @style = "margin-left:80px;"})

        </div>

        <div class = "pt-4">

            <label>Test Server Name/ IP Address:</label>
            @Html.TextBoxFor(Model => Model.ServerName, new {@class = "w-50"})
            @Html.ValidationMessageFor(Model => Model.ServerName, "", new {@class = "text-danger"})

        </div>

        <div class = "pt-5">

            <label>Additional Notes:</label>

        </div>


    </div>

     <div class = "pt-1">

            @Html.TextAreaFor(Model => Model.AdditionalNotes, new {@class = "w-100", rows = "3", col = "50"})
            @Html.ValidationMessageFor(Model => Model.AdditionalNotes, "", new {@class = "text-danger"})

     </div>

     <div class = "pt-3">

            <label>Sign Off:</label>

     </div>

     <div class = "pt-1">

            @Html.TextAreaFor(Model => Model.SignOff, new {@class = "w-100", rows = "3", col = "50"})
            @Html.ValidationMessageFor(Model => Model.SignOff, "", new {@class = "text-danger"})

     </div>

     <button class = "btn-primary">Update</button>


}
  
@Html.ValidationSummary(true)

@if(ViewBag.Message != null){
                
                <script>

                    alert("@ViewBag.Message");

                </script>

            } 


