@model Mail_X.Models.FormDetails



    <div class = "float-start">

        <label>Software Release to Live</label>

    </div>

    
    <div class = "d-flex align-items-end justify-content-end mt-2">

    <img src="~/img/Bet_Logo.jpg" class = "img-fluid" style = "width:170px; height:75px;">

    </div>

    <div class = "float-start mt-5">

        <div class = "float-start">

            <label>Test Date From:</label>
            @Html.TextBoxFor(Model => Model.StartDate, new {@readonly = "readonly", @style = "margin-left:100px"})

        </div>

        <div class = "float-end mx-5" >

            <label style = "margin-left:150px;">Test Date To:</label>
            @Html.TextBoxFor(Model => Model.EndDate, new {@readonly = "readonly", @style = "margin-left:100px"})

        </div>

        <br></br>

        <div>

            <label>Application Name:</label>
            @Html.TextBoxFor(Model => Model.AppName, new {@class = "w-50", @style = "margin-left:80px;", @readonly = "readonly"})

        </div>

        <div class = "pt-4">

            <label>Test Server Name/ IP Address:</label>
            @Html.TextBoxFor(Model => Model.ServerName, new {@class = "w-50", @readonly = "readonly"})

        </div>

        <div class = "pt-5">

            <label>Additional Notes:</label>

        </div>


    </div>

     <div class = "pt-1">

            @Html.TextAreaFor(Model => Model.AdditionalNotes, new {@class = "w-100", @readonly = "readonly", rows = "3", col = "50"})

     </div>


     <div class = "pt-3">

            <label>Sign Off:</label>

     </div>

     <div class = "pt-1">

            @Html.TextAreaFor(Model => Model.SignOff, new {@class = "w-100", @readonly = "readonly", rows = "3", col = "50"})

     </div>

     <br></br>
    

@{

    if(Model.SignOffs.Count != 0)
    {
        <h1>Sign Offs</h1>

        for (int i = 0 ; i < Model.SignOffs.Count; i++){
        <div class = "container">

         <div class = "row">

            <div>
            
                <label>Department</label>
                @Html.TextBoxFor(Model => Model.SignOffs[i].DeptName, new{ @class = "form-control", @readonly = "readonly"})
                
            
            </div>

            <div class = "col-6">

                <label>Name</label>
                @Html.TextBoxFor(Model => Model.SignOffs[i].SignName, new{ @class = "form-control", @readonly = "readonly"})

            </div>

            <div class = "col-6">

                <label>Signature</label>
                @Html.TextBoxFor(Model => Model.SignOffs[i].Signature, new{ @class = "form-control", @readonly = "readonly"})

            </div>

            <br></br>
            
    </div>

    <div class = "pt-3">

            <label>Comments:</label>

     </div>

     <div class = "pt-1">

            @Html.TextAreaFor(Model => Model.SignOffs[i].Comments, new{@class = "w-100", rows = "3", col = "50", @readonly = "readonly"})

     </div>

        </div>




    }

    }
    
    
    
    

    }
     